{
  "name": "implementation-monitoring-system",
  "version": "1.0.0",
  "description": "Digital Toolkit for HRP Implementations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/working-server.ts",
    "deploy": "ts-node-dev --respawn --transpile-only src/deploy-server.ts",
    "start": "npx ts-node src/deploy-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "db:init": "ts-node src/database/init.ts",
    "db:seed": "ts-node src/database/seed-minimal.ts",
    "db:reset": "npm run db:init && npm run db:seed",
    "setup": "npm install && cp .env.example .env && npm run db:reset",
    "clean": "rm -rf dist node_modules package-lock.json",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "uuid": "^9.0.1",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "implementation",
    "monitoring",
    "project-management",
    "hrp",
    "typescript"
  ],
  "author": "Digital Toolkit Team",
  "license": "MIT"
}